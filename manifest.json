{
    "name": "__MSG_extName__",
    "version": "1.0.0",
    "icons": {
       
    },

    "description": "__MSG_extDescription__",
	"default_locale":"fr",
    "permissions": [
          "*://*.openfoodfacts.net/*",
		   "*://*.openfoodfacts.org/*",
		   "*://*.openfoodfacts.dev/*",
		  "storage",
		  "clipboardWrite"
    ],

    "content_scripts": [
        {
            "matches": ["https://*.openfoodfacts.net/*","https://*.openfoodfacts.org/*","https://*.openfoodfacts.dev/*"],
			"css": ["/css/myStyle.css","/css/external/jquery.tagsinput.css"],
			"run_at": "document_end",
            "js": [
                    "/js/external/jquery.js",
					"/js/external/jquery.tagsinput.js",
					"/js/external/jquery-ui.min.js",
                    "/js/content_script.js"
					
                ]
        }
    ],
	
	"web_accessible_resources":[
		"/img/*"
	],

    "manifest_version": 2
}
